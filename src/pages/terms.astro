---
import EntryLayout from "@components/terms/EntryLayout.astro";
import { getIndex } from "@lib/contentParser";
import type { TermsEntry } from "@/types";

const entry = await getIndex("terms") as TermsEntry;
---

<EntryLayout entry={entry} />

<style>
  html::before {
    background-image: url(/src/assets/backgrounds/background_logo_green.png);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
