---
import { getEntries } from "@lib/contentParser";
import { getIndex } from "@lib/contentParser";
import type { ProductsEntry } from "@/types";
import CollectionLayout from "@components/products/CollectionLayout.astro";

const productsIndex = await getIndex("products") as ProductsEntry;
const products = await getEntries("products") as ProductsEntry[];

---
<CollectionLayout
  productsIndex={productsIndex}
  products={products}
/>

<style>
  html::before {
    background-image: url(/src/assets/backgrounds/background_logo_green.png);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>