---
import BaseLayout from "@components/base/BaseLayout.astro";
import PageHeader from "@components/common/PageHeader.astro";

// Get URL parameters for success/error states (from form service redirects)
const success = Astro.url.searchParams.get("success");
const submitted = Astro.url.searchParams.get("submitted");

/**
 * For Netlify Forms (Recommended if using Netlify):
 * Deploy your site to Netlify
 * Your contact form will automatically work
 * View submissions in your Netlify dashboard
 * No additional setup required!
 */

---

<BaseLayout title="Contact Us" description="Get in touch with us">
  <PageHeader title="Contact Us" />
  
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-8">
          
          <!-- Success Message -->
          {(success || submitted) && (
            <div class="glass rounded-lg p-6 mb-6 border-l-4 border-green-500">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <p class="text-green-700 font-medium">
                  Thank you for your message! We'll get back to you soon.
                </p>
              </div>
            </div>
          )}

          <!-- Contact Form Options -->
          <div class="glass rounded-lg p-8 intersect:animate-fadeUp opacity-0">
            <h2 class="text-xl font-semibold mb-6">Send us a message</h2>
            
            <!-- OPTION 1: Netlify Forms (Use this if deploying to Netlify) -->
            <form 
              name="contact" 
              method="POST" 
              data-netlify="true" 
              data-netlify-honeypot="bot-field"
              action="/contact?submitted=true"
              class="space-y-6"
            >
              <!-- Hidden bot field for spam protection -->
              <input type="hidden" name="form-name" value="contact" />
              <div style="display: none;">
                <label>Don't fill this out: <input name="bot-field" /></label>
              </div>

              <!-- Name Field -->
              <div>
                <label for="name" class="block text-sm font-medium mb-2">
                  Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="Your full name"
                />
              </div>

              <!-- Email Field -->
              <div>
                <label for="email" class="block text-sm font-medium mb-2">
                  Email <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="your.email@example.com"
                />
              </div>

              <!-- Subject Field (Optional) -->
              <div>
                <label for="subject" class="block text-sm font-medium mb-2">
                  Subject
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="What is this about?"
                />
              </div>

              <!-- Message Field -->
              <div>
                <label for="message" class="block text-sm font-medium mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-vertical"
                  placeholder="Tell us how we can help you..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium"
              >
                Send Message
              </button>
            </form>

            <!-- Alternative: Formspree Instructions -->
            <div class="mt-8 p-4 bg-blue-50 rounded-lg border border-blue-200">
              <h3 class="text-sm font-semibold text-blue-800 mb-2">Using Formspree instead?</h3>
              <p class="text-sm text-blue-700 mb-2">
                If you prefer Formspree, replace the form action with:
              </p>
              <code class="text-xs bg-blue-100 px-2 py-1 rounded">action="https://formspree.io/f/YOUR_FORM_ID"</code>
              <p class="text-xs text-blue-600 mt-2">
                Sign up at <a href="https://formspree.io" target="_blank" class="underline">formspree.io</a> to get your form ID.
              </p>
            </div>
          </div>

          <!-- Additional Contact Info -->
          <div class="mt-8 glass rounded-lg p-6 text-center intersect:animate-fadeUp opacity-0">
            <h3 class="text-lg font-semibold mb-4">Other ways to reach us</h3>
            <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span>hello@example.com</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span>+1 (555) 123-4567</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
